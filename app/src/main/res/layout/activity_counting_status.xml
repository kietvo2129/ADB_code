<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/hhh1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/h1"
            android:layout_marginHorizontal="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="#33CCCC">


                <TextView
                    android:id="@+id/tvtotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvtotal"
                    android:layout_marginVertical="8dp"
                    android:paddingHorizontal="8dp"
                    android:text="Total Actual Today"
                    android:textColor="#fff" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="#28A745"
                android:visibility="gone">


                <TextView
                    android:id="@+id/tvdoor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvdoor"
                    android:layout_marginVertical="8dp"
                    android:paddingHorizontal="8dp"
                    android:text="Door Alarm"
                    android:textColor="#fff" />


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hh2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hhh1"
            android:layout_marginHorizontal="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="#92D050">


                    <TextView
                        android:id="@+id/tvEfficiency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvEfficiency"
                        android:layout_marginVertical="8dp"
                        android:paddingHorizontal="8dp"
                        android:text="Total Efficiency Today"
                        android:textColor="#fff" />


                </RelativeLayout>

                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="#FF0000">


                    <TextView
                        android:id="@+id/tvDefective"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvDefective"
                        android:layout_marginVertical="8dp"
                        android:paddingHorizontal="8dp"
                        android:text="Total Defective Today"
                        android:textColor="#fff" />


                </RelativeLayout>



            </LinearLayout>
        </LinearLayout>
      <com.github.mikephil.charting.charts.BarChart
          android:id="@+id/barchart"
          android:layout_below="@+id/hh2"
          android:layout_marginTop="16dp"
          android:layout_width="match_parent"
          android:layout_marginVertical="8dp"
          android:layout_height="400dp"/>

        <RelativeLayout
            android:id="@+id/hh3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/barchart"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/backgr_recyc">

            <LinearLayout
                android:id="@+id/e1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/backgr_title"
                    android:gravity="center"
                    android:paddingHorizontal="4dp"
                    android:text="Sensor ID" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/backgr_title"
                    android:gravity="center"
                    android:paddingHorizontal="4dp"
                    android:text="Sensor Name" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/backgr_title"
                    android:gravity="center"
                    android:paddingHorizontal="4dp"
                    android:text="Location" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/backgr_title"
                    android:gravity="center"
                    android:paddingHorizontal="4dp"
                    android:text="Update Time" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_sensor_info"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_below="@+id/e1"
                tools:listitem="@layout/item_homesensorinfor">

            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>


    </RelativeLayout>

</ScrollView>