<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:id="@+id/h1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#92D050">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Action"
            android:textColor="#fff"
            android:textSize="24dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            app:cardBackgroundColor="#7A7A79"
            app:cardCornerRadius="4dp">

            <ImageView
                style="@style/SelectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/btclose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_close" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/h1">

            <RelativeLayout
                android:id="@+id/h2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="ID:" />

                <TextView
                    android:id="@+id/nm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvId"
                    android:layout_marginLeft="8dp"
                    android:text="Name:" />

                <TextView
                    android:id="@+id/lc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvNm"
                    android:layout_marginLeft="8dp"
                    android:text="Location:" />

                <TextView
                    android:id="@+id/tvId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toEndOf="@+id/lc"
                    android:text="IDaddadadasda:" />

                <TextView
                    android:id="@+id/tvNm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvId"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toEndOf="@+id/lc"
                    android:text="IDaddadadasda:" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvNm"
                    android:layout_marginLeft="8dp"
                    android:layout_toEndOf="@+id/lc"
                    android:text="IDaddadadasda:" />

            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/h2"
                android:layout_marginTop="8dp"
                android:background="#A3A1A1" />

            <RelativeLayout
                android:id="@+id/h4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/e1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:text="Issues" />
                <TextView
                    android:id="@+id/tvIssue"
                    android:textColor="#D80505"
                    android:textStyle="bold"
                    android:layout_toEndOf="@+id/e1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp" />

                <Button
                    android:id="@+id/buttontoggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/toggle_custom"
                    android:text="OFF" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/h6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/h4"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="57C"
                    android:textColor="#D80505"
                    android:textSize="36dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/h7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/h6"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:text="Min:" />

                <TextView
                    android:id="@+id/tvmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toEndOf="@+id/min"
                    android:text="40C"></TextView>

                <TextView
                    android:id="@+id/max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_toStartOf="@+id/tvmax"
                    android:text="Max:" />

                <TextView
                    android:id="@+id/tvmax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="32dp"
                    android:text="40C"></TextView>

            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/Hh1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/h7"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:hint="Done"
                android:textColorHint="#939393"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="#000000"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/ErrorTextAppearance">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvinput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:imeOptions="actionNext"
                    android:inputType="textMultiLine"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp"
                    android:paddingLeft="8dp"
                    android:textColor="#000000" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/bt1"
                android:layout_below="@+id/Hh1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Picture"/>

            <ImageView
                android:layout_below="@+id/bt1"
                android:layout_margin="16dp"
                android:id="@+id/impicture"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/impicture"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#009688"
                app:srcCompat="@android:drawable/ic_menu_send" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>