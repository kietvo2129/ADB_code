            </RelativeLayout>

            <TextView
                android:id="@+id/tvc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rll"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:text="Moving Date"
                android:textSize="24sp"
                android:textStyle="bold" />

            <CalendarView
                android:id="@+id/calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvc"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tvd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calendar"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:text="Receive User"
                android:textSize="24sp"
                android:textStyle="bold" />

            <com.roughike.swipeselector.SwipeSelector
                android:id="@+id/swipeSelector_receive_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvd"
                android:layout_marginHorizontal="16dp"
                android:background="#D8D7D8" />

            <TextView
                android:visibility="gone"
                android:layout_below="@+id/swipeSelector_receive_user"
                android:layout_width="match_parent"
                android:textColor="#F3103A"
                android:layout_marginHorizontal="16dp"
                android:id="@+id/tv_error"
                android:drawableRight="@drawable/ic_baseline_error_24"
                android:layout_height="wrap_content"
                android:padding="16dp"/>
            <TextView
