<?xml version="1.0" encoding="utf-8"?>

<com.autonsi.databoard.ZoomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/side_nav_bar"
        android:padding="16dp"
        android:transitionName="imageTransition"
        tools:context="com.autonsi.databoard.DigitalData.StatusLayout.Mapsensor.MapActivity">

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="Bitaxco-Building1"
            android:textColor="#fff" />

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff" />

        </RelativeLayout>


    </RelativeLayout>
</com.autonsi.databoard.ZoomLayout>