<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/h1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#92D050">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Oder Materials"
            android:textColor="#fff"
            android:textSize="24dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            app:cardBackgroundColor="#7A7A79"
            app:cardCornerRadius="4dp">

            <ImageView
                style="@style/SelectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/btclose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_close" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hh2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h1">

        <RelativeLayout
            android:id="@+id/h2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/id"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Type:" />

            <TextView
                android:id="@+id/nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvId"
                android:layout_marginLeft="8dp"
                android:text="MT Code:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lc"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNm"
                android:layout_marginLeft="8dp"
                android:text="MT Name:" />

            <TextView
                android:id="@+id/tvId"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@+id/lc"
                 />

            <TextView
                android:id="@+id/tvNm"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvId"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@+id/lc"
                 />

            <TextView
                android:id="@+id/tvLocation"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNm"
                android:layout_marginLeft="8dp"
                android:layout_toEndOf="@+id/lc"
                 />

        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/h2"
            android:layout_marginTop="8dp"
            android:background="#A3A1A1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_below="@+id/view">

            <TextView
                android:id="@+id/e1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QC: "/>

            <TextView
                android:id="@+id/tvQC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/e5"
                 />


            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@+id/e1"
                android:id="@+id/e2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QC Range: "/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@+id/e1"
                android:id="@+id/tvQCrange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/e5"
                 />

            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@+id/e2"
                android:id="@+id/e3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit Price: "/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@+id/e2"
                android:id="@+id/tvUnitPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/e5"
                 />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@+id/e3"
                android:id="@+id/e4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bundle Qty: "/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@+id/e3"
                android:id="@+id/tvBundleQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/e5"
                 />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@+id/e4"
                android:id="@+id/e5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bundle Price: "/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@+id/e4"
                android:id="@+id/tvBundlePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/e5"
                 />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@+id/e5"
                android:id="@+id/e6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit: "/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@+id/e5"
                android:id="@+id/tvUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/e5"
                 />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@+id/e6"
                android:id="@+id/e7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry In: "/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@+id/e6"
                android:id="@+id/tvexpiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/e5"
                 />

            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@+id/e7"
                android:id="@+id/e8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: "/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@+id/e7"
                android:id="@+id/tvdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/e5"
                 />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hh2">
        <ImageView
            android:id="@+id/im_sub"
            android:layout_toStartOf="@+id/numinput"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/numinput"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:paddingHorizontal="24dp"
            android:textSize="24sp"
            android:paddingVertical="16dp"/>

        <ImageView
            android:id="@+id/im_plus"
            android:layout_toEndOf="@+id/numinput"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        app:srcCompat="@android:drawable/ic_menu_send" />

</RelativeLayout>