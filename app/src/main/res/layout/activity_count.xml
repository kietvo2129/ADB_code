<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        style="@style/SelecItemBackground"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/h1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:cardBackgroundColor="#009999"
        app:cardCornerRadius="4dp">


<!--            <TextView-->
<!--                android:id="@+id/tv_id"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:drawableRight="@drawable/ic_down"-->
<!--                android:gravity="center"-->
<!--                android:padding="8dp"-->
<!--                android:text="Line1/Line san xuat giay"-->
<!--                android:textColor="#fff"-->
<!--                android:textSize="24dp"-->
<!--                android:textStyle="bold" />-->
        <TextSwitcher
            android:id="@+id/ts_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/SelecItemBackground"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/h2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h1"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#009999"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="Building1-Ground Floor"
                android:textColor="#fff"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/ic_target"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="Target: 8000"
                android:textColor="#fff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_clock"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="2020-07-09    7:00~18:00"
                android:textColor="#fff" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_below="@+id/h2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:background="#009999"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/tv_actual_plus"
                style="@style/SelecItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/e1"
                        android:layout_marginBottom="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_centerHorizontal="true"
                        android:text="Actual"
                        android:textColor="#fff"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/e1"
                        android:layout_centerHorizontal="true"
                        app:cardBackgroundColor="#018C8C"
                        app:cardCornerRadius="16dp">

                        <TextView
                            style="@style/SelecItemBackground"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/tv_actual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="123213"
                            android:paddingHorizontal="32dp"
                            android:paddingVertical="8dp"
                            android:textColor="#fff"
                            android:textSize="36dp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="8dp"
                android:background="#FFF" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    style="@style/SelecItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="-"
                    android:textColor="#fff"
                    android:textSize="36dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="8dp"
            android:background="#FFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal">

            <RelativeLayout
                style="@style/SelecItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/r1"
                        android:layout_marginBottom="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_centerHorizontal="true"
                        android:text="Defective"
                        android:textColor="#fff"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/r1"
                        android:layout_centerHorizontal="true"
                        app:cardBackgroundColor="#018C8C"
                        app:cardCornerRadius="16dp">

                        <TextView
                            style="@style/SelecItemBackground"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="16"
                            android:textColor="#fff"
                            android:padding="8dp"
                            android:textSize="36dp"
                            android:layout_marginHorizontal="32dp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="8dp"
                android:background="#FFF" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    style="@style/SelecItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="-"
                    android:textColor="#fff"
                    android:textSize="36dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>