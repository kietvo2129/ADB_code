<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/khungtrang"
    android:transitionName="imageTransition"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeightSmall"
    android:layout_gravity="center_vertical"
    android:id="@+id/Contran"
    android:padding="16dp">

  <ImageView
      android:id="@+id/playing_icon"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent" />

  <TextView
      android:id="@+id/no_number"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginLeft="16dp"
      tools:text="1"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toEndOf="@id/playing_icon"
      app:layout_constraintBottom_toBottomOf="parent" />

  <TextView
      android:id="@+id/tv_floor"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:ellipsize="end"
      android:maxLines="1"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@id/no_number"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="First" />


