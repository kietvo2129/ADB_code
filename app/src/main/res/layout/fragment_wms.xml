<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/rl_receiving"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/action_lick"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_receiving" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ima"
                android:layout_centerHorizontal="true"
                android:text="Receiving Oder"
                android:textColor="#fff" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_Shipping"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@drawable/action_lick"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ima2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_qccheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ima2"
                android:layout_centerHorizontal="true"
                android:text="Shipping"
                android:textColor="#fff" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/rl_scan"
            style="@style/SelectableItemBackground"

            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/action_lick"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/eima22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_scan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eima22"
                android:layout_centerHorizontal="true"
                android:text="Receiving Scan"
                android:textColor="#fff" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/find_mt_code"
            android:background="@drawable/action_lick"
            style="@style/SelectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_find_mt_code"
                android:id="@+id/eima222"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:textColor="#fff"
                android:layout_below="@+id/eima222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Status MT Code" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
