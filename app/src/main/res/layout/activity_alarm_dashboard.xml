                    android:id="@+id/tvdoor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvdoor"
                    android:layout_marginVertical="8dp"
                    android:paddingHorizontal="8dp"
                    android:text="Door Alarm"
                    android:textColor="#fff" />


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hh2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hhh1"
            android:layout_marginHorizontal="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="#3E95CD">



                    <TextView
                        android:id="@+id/tvmotion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvmotion"
                        android:layout_marginVertical="8dp"
                        android:paddingHorizontal="8dp"
                        android:text="Motion Alarm"
                        android:textColor="#fff" />


                </RelativeLayout>

                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="#BEA6FF">


                    <TextView
                        android:id="@+id/tvsmoke"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"

                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvsmoke"
                        android:layout_marginVertical="8dp"
                        android:paddingHorizontal="8dp"
                        android:text="Smoke Alarm"
                        android:textColor="#fff" />


                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/linechart"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/hh2"
            android:layout_marginVertical="8dp" />
        <TextView
            android:id="@+id/xx"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Issues List Today"
            android:layout_below="@+id/linechart"
            android:layout_marginTop="8dp"/>

        <RelativeLayout
            android:layout_below="@+id/xx"
            android:layout_marginTop="8dp"
            android:id="@+id/hh3"
            android:background="@drawable/backgr_recyc"
            android:layout_marginHorizontal="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/e1"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingHorizontal="4dp"
                    android:background="@drawable/backgr_title"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Sensor ID"/>
                <TextView
                    android:paddingHorizontal="4dp"
                    android:background="@drawable/backgr_title"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Sensor Name"/>
                <TextView
                    android:paddingHorizontal="4dp"
                    android:background="@drawable/backgr_title"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Location"/>
                <TextView
                    android:paddingHorizontal="4dp"
                    android:background="@drawable/backgr_title"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Update Time"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_sensor_info"
                android:layout_below="@+id/e1"
                android:layout_width="match_parent"
                tools:listitem="@layout/item_homesensorinfor"
                android:layout_height="400dp">

            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>



    </RelativeLayout>

